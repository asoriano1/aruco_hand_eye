<?xml version="1.0"?>
<launch>

  <arg name="camera_ns" default="camera2"/>
	
  <include file="$(find aruco_hand_eye)/launch/aruco_hand_eye.launch">
    <arg name="markerid"   value="582"/>
    <arg name="markersize" value="0.110"/>
    <arg name="publish_tf" value="true"/>

    <arg name="marker_parent_frame" value="/gripper_marker_fixed_link"/>
    <arg name="camera_parent_frame" value="/base_link"/>

    <arg name="camera" value="/$(arg camera_ns)/color/"/>
    <arg name="camera_frame" value="/$(arg camera_ns)_color_optical_frame"/>
    
  </include>
</launch>
